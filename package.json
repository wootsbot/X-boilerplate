{
  "name": "x-boilerplate",
  "version": "1.0.0-beta.6",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "dev:mock": "npx msw init public/ --save && pnpm dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e": "playwright test",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prettier:format": "prettier --config .prettierrc \"./**/*.+(js|ts)\" --write",
    "prettier": "prettier --config .prettierrc \"./**/*.+(js|ts)\" --check",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@hookform/resolvers": "3.2.0",
    "@icons-pack/react-simple-icons": "8.0.1",
    "@lukemorales/query-key-factory": "1.3.2",
    "@openkit/language-codes": "0.1.0-beta.6",
    "@react-email/components": "0.0.7",
    "@react-email/html": "0.0.4",
    "@tanstack/react-query": "5.0.0",
    "@tanstack/react-query-devtools": "5.0.0",
    "@xstate/immer": "0.3.3",
    "@xstate/react": "3.2.2",
    "date-fns": "2.30.0",
    "i18next": "23.4.4",
    "immer": "10.0.2",
    "next": "13.5.6",
    "next-auth": "4.23.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-email": "1.9.4",
    "react-hook-form": "7.45.4",
    "react-hot-toast": "2.4.1",
    "react-i18next": "13.1.1",
    "resend": "0.17.2",
    "xstate": "4.38.2",
    "zod": "3.21.4"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "pnpm run prettier"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@changesets/get-release-plan": "3.0.17",
    "@changesets/types": "5.2.1",
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@playwright/test": "^1.37.0",
    "@testing-library/react": "14.0.0",
    "@types/node": "20.4.5",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "@vitest/coverage-v8": "0.34.1",
    "@vitest/ui": "0.34.1",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "13.2.3",
    "msw": "1.2.3",
    "prettier": "3.0.0",
    "typescript": "5.1.6",
    "vitest": "0.34.1"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
